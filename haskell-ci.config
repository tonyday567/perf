--- The name of GitHub Action
github-action-name: haskell-ci

-- Disable email notifications
email-notifications: False

-- cabal-install version for all jobs
cabal-install-version: 3.4

-- distribution version (xenial, bionic)
distribution: bionic

-- Haddock step
haddock: True

-- Build without tests and benchmarks
no-tests-no-benchmarks: True

-- Make unconstrained build
unconstrained: True

-- Add ghc-head job
-- not supported right now. https://github.com/haskell-CI/haskell-ci/issues/458
ghc-head: False

-- Allow failures of particular GHC version
allow-failures: >9.0.1

-- Enable Docspec job
docspec: ==8.10.4
docspec-options: --verbose --timeout 2

-- from haskell-ci project
jobs: 2:2

-- This is useful if you want limit jobs beyond tested-with specification,
-- e.g. while iterating the CI setup itself.
-- linux-jobs: >=9
-- macos-jobs: ==8.10.*
-- windows not yet supported
-- windows-jobs: ==8.10.*

-- on Linux we can use ghcup to setup (some) of jobs
ghcup-jobs: >=9

-- from lens
-- Temporary hacks needed to make the GHC 9.0.* job work
hlint-job:              8.10.4
copy-fields:            some
